{% extends 'Base2.html.twig' %}
 {% block titre %}
     <h3>{{ advert.title }}</h3>
 {% endblock %}
{% block content %}
    <div class="inner-content loginWrp">
        <div class="container">


            <div class="inner-wrap">
                <div class="row">
                    <div class="col-md-12">
                        <div class="listWrpService jobdetail">
                            <div class="row">
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="listImg"><img src="{{asset("uploads/images/"~advert.company.photo)}}" alt=""></div>
                                </div>
                                <div class="col-md-9 col-sm-9 col-xs-9">
                                    <h3>{{ advert.title }}</h3>

                                    <ul class="featureInfo">
                                        <li><i class="fa fa-map-marker" aria-hidden="true"></i>{{ advert.company.adresse }}</li>
                                        <li><i class="fa fa-calendar" aria-hidden="true"></i> {{ advert.publicationDate|date('y/M/d') }} - {{ advert.expirationDate|date('y/M/d') }} </li>
                                    </ul>
                                    <br>
                                    <div class="click-btn apply"><a href="{{ path('candidature_new',{'id':advert.id}) }}">Postuler maintenant</a></div>

                                </div>
                            </div>
                            <br>
                            <br>

                            <h2>Discription</h2>
                            {{ advert.content|raw }}
                            <br>
                            <br>
                            <iframe src= https://www.google.com/maps/embed/v1/place?key=AIzaSyBoVSG3FplX2Ckbl672m4HWjnKK4WS5j2w&q={{ advert.company.adresse }}&attribution_source=Google+Maps+Embed+API"
                                    style="height: 400px;width: 900px">
                            </iframe>
                        </div>
                    </div>
        </div>
    </div>
{% endblock %}
